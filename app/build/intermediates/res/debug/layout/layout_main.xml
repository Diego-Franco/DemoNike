<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".Main">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center">

                <com.defch.demonike.ui.IndicatorView
                    android:id="@+id/indicatorY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:maxMove="10"
                    app:colorOn="@color/nike_g"
                    app:colorOff="@color/nike_r"
                    app:scaleColor="@color/nike_y"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:gravity="center">

            <com.defch.demonike.ui.IndicatorView
                android:id="@+id/indicatorX"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:maxMove="10"
                app:colorOn="@color/nike_p"
                app:colorOff="@color/nike_pi"
                app:scaleColor="@color/nike_bl"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center">

            <com.defch.demonike.ui.IndicatorView
                android:id="@+id/indicatorZ"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:maxMove="10"
                app:colorOn="@color/nike_bl"
                app:colorOff="@color/nike_y"
                app:scaleColor="@color/nike_r"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
